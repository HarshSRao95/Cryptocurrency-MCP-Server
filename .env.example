# MCP Crypto Server Environment Configuration
# Copy this file to .env and customize for your environment

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file location (leave empty for console only)
LOG_FILE=mcp_server.log

# Log format
# LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# ============================================================================
# CACHE CONFIGURATION
# ============================================================================

# Cache TTL (Time To Live) in seconds
TICKER_CACHE_TTL=10
OHLCV_CACHE_TTL=60
ORDERBOOK_CACHE_TTL=5

# Cache size limits
TICKER_CACHE_SIZE=1000
OHLCV_CACHE_SIZE=500
ORDERBOOK_CACHE_SIZE=500

# ============================================================================
# RATE LIMITING
# ============================================================================

# Maximum requests per minute
MAX_REQUESTS_PER_MINUTE=1200

# Request timeout in milliseconds
REQUEST_TIMEOUT=30000

# ============================================================================
# EXCHANGE API KEYS (Optional - for authenticated endpoints)
# ============================================================================

# Binance
BINANCE_API_KEY=
BINANCE_API_SECRET=

# Coinbase
COINBASE_API_KEY=
COINBASE_API_SECRET=

# Kraken
KRAKEN_API_KEY=
KRAKEN_API_SECRET=

# Bitfinex
BITFINEX_API_KEY=
BITFINEX_API_SECRET=

# Huobi
HUOBI_API_KEY=
HUOBI_API_SECRET=

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

# Server host (for HTTP API if implemented)
HOST=0.0.0.0
PORT=8000

# Enable debug mode (DO NOT USE IN PRODUCTION)
DEBUG=False

# Timezone for timestamps
TIMEZONE=UTC

# ============================================================================
# PERFORMANCE TUNING
# ============================================================================

# Number of concurrent requests
MAX_CONCURRENT_REQUESTS=100

# Connection pool size
CONNECTION_POOL_SIZE=50

# Retry attempts for failed requests
MAX_RETRIES=3

# Retry delay in seconds
RETRY_DELAY=1

# ============================================================================
# MONITORING & ALERTS (Optional - for future features)
# ============================================================================

# Enable monitoring
ENABLE_MONITORING=False

# Monitoring interval in seconds
MONITORING_INTERVAL=60

# Alert email
ALERT_EMAIL=

# Webhook URL for alerts
ALERT_WEBHOOK_URL=

# ============================================================================
# DATABASE (Optional - for storing historical data)
# ============================================================================

# Database URL (if you want to persist data)
# DATABASE_URL=postgresql://user:password@localhost/mcp_crypto

# ============================================================================
# SECURITY
# ============================================================================

# API key for server access (if you add authentication)
# SERVER_API_KEY=your_secret_key_here

# Allowed origins for CORS
# ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com